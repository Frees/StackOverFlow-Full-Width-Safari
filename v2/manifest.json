{
  "name": "StackOverFlow Full Width",
  "version": "2.0.0",
  "manifest_version": 3,
  "description": "Enjoy Full Width of StackOverFlow without any distraction.",
  "icons": {
    "64": "images/icon-64.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_title": "StackOverFlow Full Width",
    "default_popup": "popup.html",
    "default_icon": {
      "64": "images/icon-64.png",
      "128": "images/icon-128.png"
    }
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["https://stackoverflow.com/questions/*"],
  "commands": {
    "enable": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Enable Full Width"
    },
    "disable": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "description": "Disable Full Width"
    }
  }
}
